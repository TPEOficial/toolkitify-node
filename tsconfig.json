{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "types": [
            "jest",
            "node"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist/types",
        "rootDir": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "declaration": true,
        "declarationDir": "./dist/types",
        "emitDeclarationOnly": true
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules",
        "jest.config.js"
    ]
}