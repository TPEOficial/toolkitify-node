{
  "name": "toolkitify",
  "version": "0.0.27",
  "description": "Toolkit to make your life easier",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.cjs",
      "import": "./dist/esm/index.js"
    },
    "./cache": {
      "types": "./dist/types/modules/cache/index.d.ts",
      "require": "./dist/cjs/modules/cache/index.cjs",
      "import": "./dist/esm/modules/cache/index.js"
    },
    "./client-only": {
      "types": "./dist/types/modules/client-only/index.d.ts",
      "require": "./dist/cjs/modules/client-only/index.cjs",
      "import": "./dist/esm/modules/client-only/index.js"
    },
    "./feature-flags": {
      "types": "./dist/types/modules/feature-flags/index.d.ts",
      "require": "./dist/cjs/modules/feature-flags/index.cjs",
      "import": "./dist/esm/modules/feature-flags/index.js"
    },
    "./logger": {
      "types": "./dist/types/modules/logger/index.d.ts",
      "require": "./dist/cjs/modules/logger/index.cjs",
      "import": "./dist/esm/modules/logger/index.js"
    },
    "./optimistic-ui": {
      "types": "./dist/types/modules/optimistic-ui/index.d.ts",
      "require": "./dist/cjs/modules/optimistic-ui/index.cjs",
      "import": "./dist/esm/modules/optimistic-ui/index.js"
    },
    "./rate-limit": {
      "types": "./dist/types/modules/rate-limit/index.d.ts",
      "require": "./dist/cjs/modules/rate-limit/index.cjs",
      "import": "./dist/esm/modules/rate-limit/index.js"
    },
    "./server-only": {
      "types": "./dist/types/modules/server-only/index.d.ts",
      "require": "./dist/cjs/modules/server-only/index.cjs",
      "import": "./dist/esm/modules/server-only/index.js"
    },
    "./network": {
      "types": "./dist/types/modules/network/index.d.ts",
      "require": "./dist/cjs/modules/network/index.cjs",
      "import": "./dist/esm/modules/network/index.js"
    },
    "./*": {
      "require": "./dist/cjs/**/*.cjs",
      "import": "./dist/esm/**/*.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && vite build",
    "start": "ts-node src/index.ts",
    "prepublishOnly": "npm run build",
    "test": "jest"
  },
  "repository": {
    "url": "https://github.com/TPEOficial/toolkitify-node"
  },
  "keywords": [
    "cache",
    "caching",
    "toolkit",
    "toolkitify",
    "rate-limit",
    "server-only",
    "client-only",
    "optimistic-ui",
    "network",
    "ip-address",
    "client-ip"
  ],
  "author": "TPEOficial LLC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/TPEOficial/toolkitify-node/issues"
  },
  "homepage": "https://dymo.tpeoficial.com",
  "dependencies": {
    "path": "^0.12.7"
  },
  "contributors": [
    "TPEOficial (https://github.com/TPEOficial)",
    "FJRG2007 (https://github.com/FJRG2007)"
  ],
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.18.7",
    "dotenv": "^17.2.2",
    "jest": "^30.1.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vite": "^6.4.1",
    "vite-plugin-dts": "^4.5.4"
  },
  "prettier": {
    "tabWidth": 4,
    "useTabs": false
  }
}
